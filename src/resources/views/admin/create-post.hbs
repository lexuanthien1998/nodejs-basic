
<div class="container">
    <h3 class="mt-3">Tạo bài viết !</h3>
    <form method="POST" action="/admin/post/store" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Tiêu đề:</label>
            <input type="text" id="title" class="form-control" placeholder="Tiêu đề bài viết !" name="title">
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea type="text" id="description" class="form-control" placeholder="Mô tả bài viết !" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea type="text" id="content" class="form-control" placeholder="Nội dung bài viết !" name="content"></textarea>
        </div>
        <div class="form-group">
            <label for="image">Image URL:</label>
            {{!-- <input type="text" id="image" class="form-control" name="image" placeholder="Hình ảnh bài viết !"> --}}
            <input type="file" class="form-control-file" name="image" placeholder="Hình ảnh bài viết !">
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <input type="text" id="category" class="form-control" placeholder="Thể loại bài viết !" name="category">
        </div>
        <div class="form-group">
            <label for="author">Author:</label>
            <input type="text" id="author" class="form-control" placeholder="Tác giả !" name="author">
        </div>
        <button type="submit" class="btn btn-success">CREATE POST</button>
    </form>
</div>

